@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    @* ddd => Mon, dddd is for 4,and more characters *@
    <li>Release Date: @Convert.ToDateTime(Model.ReleaseDate).ToString("dddd, MMMM d, yyyy")</li>
    <li>Date Added: @Convert.ToDateTime(Model.DateAdded).ToString("dddd, MMMM d, yyyy")</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>

